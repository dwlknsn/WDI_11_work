<h1>Songs#new</h1>

<%= form_for @song do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>

  <div class="field">
    <%= f.label :album %><br />
    <% Album.all.each do |album| %>
      <%# binding.pry %>
      <%= check_box_tag "song[album_ids][]", album.id, @song.album_ids.include?(album.id) %>
      <%= album.name %><br />

      <%#= label_tag("song_genre_id", album.name) %>
      <%#= radio_button_tag("song[genre_id]", album.id) %>

    <% end %>
  </div>


  <%= f.submit 'Add song!' %>

<% end %>